'**********************************************************************************************''
'Sætter navnet på aktuelt anvendt tabel
'**********************************************************************************************''
Sub TXTTSetTableName(ByVal szName As String)

OnError GoTo ErrorOccured

	mszLayer = szName
	
	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

'**********************************************************************************************''
'Sætter navnet på på af de anvendte kolonner
'**********************************************************************************************''
Sub TXTTSetColumnNames(ByVal szCol As String, ByVal szName As String)

OnError GoTo ErrorOccured

	Do Case szCol
		Case "X"
			mszXCol	= szName
		Case "Y"
			mszYCol	= szName
		Case "ANGLE"
			mszAngleCol	= szName
		Case "NO"
			mszHusnrCol	= szName
		Case "LITRA"
			mszLitraCol	= szName
	End Case

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

