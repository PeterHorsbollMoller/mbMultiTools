Sub SaveCurrentToolSetup

Dim	i As Integer

	'***Checking existing ToolSetup-file...
	If FileExists(mszBtnFile) Then
		Kill mszBtnFile
	End If

	Open File mszBtnFile
		For Output
		As #1

	For i = 1 To Ubound(marrActiveIcon)

		If marrActiveIcon(i) > 0 Then
			Print #1, marrActiveIcon(i)
		End If
	Next

	Close File #1

End Sub

