		Case 3	'VEJKODE
			If nItem = 0 Then
				ReDim marrValues5
			Else
				szValue = marrValues3(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(1).szCond, marrssdInfo(nCtrlItem).szCond)
		
