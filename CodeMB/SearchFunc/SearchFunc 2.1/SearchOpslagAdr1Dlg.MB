				If NOT bReCalled Then
					If NOT SRCHShowMatchValueInListControl(SRCH_CTRL_ADR_VEJNAVN_LIST, marrssdInfo(nCtrlItem).szTab,
							marrssdInfo(nCtrlItem).szCol, marrssdInfo(4).szCol, marrssdInfo(nCtrlItem).szCond, marrValues4) Then
					
						Note szValue & ": Tilsvarende " & marrssdInfo(4).szDesc & " ikke fundet!"
					End If				
				End If
			End If
				
			Call Adr1KnrVnrVnvnHnrButtonCTRL(SRCH_CTRL_ADR_HUSNR_BUTTON)
		
			If bSelectAll Then
				Call HandlerAdr1OpslagZoom
				Call SRCHSelectAll(marrssdInfo(3).szTab, marrssdInfo(3).szCond)
			End If
			
		'---------------------------------------------
		Case 4	'VEJNAVN
			If nItem = 0 Then
				ReDim marrValues5
			Else
				szValue = marrValues4(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(1).szCond, marrssdInfo(nCtrlItem).szCond)
	
				'**Finding the matching VEJKODE
				If NOT SRCHShowMatchValueInListControl(SRCH_CTRL_ADR_VEJKODE_LIST, marrssdInfo(nCtrlItem).szTab,
						marrssdInfo(nCtrlItem).szCol, marrssdInfo(3).szCol, marrssdInfo(nCtrlItem).szCond, marrValues3) Then
				
					Note szValue & ": Tilsvarende " & marrssdInfo(3).szDesc & " ikke fundet!"
				End If				
			End If

			Call Adr1KnrVnrVnvnHnrListCTRL(SRCH_CTRL_ADR_VEJKODE_LIST, bSelectAll, TRUE)

		'---------------------------------------------
		Case 5	'HUSNR
			If nItem = 0 Then
				Exit Sub
			End If

			szValue = marrValues5(nItem)
			If mbHusnrBogstavCombined Then
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
			Else
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol & "+" & marrssdInfo(6).szCol, "=", szValue)				
			End If		

			If marrssdInfo(3).szCond = "" Then
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(4).szCond, marrssdInfo(nCtrlItem).szCond)
			Else
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(3).szCond, marrssdInfo(nCtrlItem).szCond)
			End If
		
			Call HandlerAdr1OpslagZoom
