'**********************************************************************************************''
' Dialog til opslagssøgning i en enkelte tabel
'**********************************************************************************************''
Sub SRCHOpslagAdrOneTable(sbtnCur As T_SEARCHBTN)

Dim	i, j As Integer,
	szTab, szCol As String

OnError GoTo ErrorOccured

	'Nulstiller arrays med tabeller, kolonner og betingelser
	For i = 1 To Ubound(marrssdInfo)
		marrssdInfo(i).szTab	= ""
		marrssdInfo(i).szCol	= ""
		marrssdInfo(i).szCond	= ""
		marrssdInfo(i).szDesc	= ""
	Next

	'**Checking table structure
	For i = 1 To Ubound(sbtnCur.stabTabs)
		szTab = sbtnCur.stabTabs(i).szName
		If szTab = "" Then
			Note ERR_KPAK_NO_SEARCH_TAB_NAME
			Exit Sub
		ElseIf NOT TableOpen(szTab) Then
			Note ERR_KPAK_SEARCH_TAB_NOT_OPEN & szTab
			Exit Sub
		End If
		
		For j = 1 To Ubound(sbtnCur.stabTabs(i).scolCols)
			szCol = sbtnCur.stabTabs(i).scolCols(j).szName
			If szCol = "" Then
				Note ERR_KPAK_NO_SEARCH_COL_NAME & " (" & sbtnCur.stabTabs(i).scolCols(j).szDescription & ")"
				Exit Sub
			ElseIf NOT ColExist(szTab, szCol) Then
				Note ERR_KPAK_SEARCH_COL_DONT_EXIST & szTab & "(" & szCol & ")"
				Exit Sub
			ElseIf NOT ColumnInfo(szTab, szCol, COL_INFO_INDEXED) AND SRCHPrintIndexImprovement() Then
				Print "Søgningen kan eventuelt optimeres ved at oprette indeks på denne kolonne: " & szTab & "(" & szCol & ")"
			End If
		Next	'j
	Next	'i

	Do Case sbtnCur.nSearchType
		Case SSTYPE_3_VNVN_HNR, 301, 1
			mbHusnrBogstavCombined = TRUE
			Call SRCHOpslagAdr1VnvnHnr(sbtnCur)

		Case SSTYPE_3_VNVN_HNR_B, 302, 2
			mbHusnrBogstavCombined = FALSE
			Call SRCHOpslagAdr1VnvnHnr(sbtnCur)

		Case SSTYPE_3_VNR_VNVN_HNR, 303, 3
			mbHusnrBogstavCombined = TRUE
			Call SRCHOpslagAdr1VnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_VNR_VNVN_HNR_B, 304, 4
			mbHusnrBogstavCombined = FALSE
			Call SRCHOpslagAdr1VnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_KNR_VNVN_HNR, 305, 5
			mbHusnrBogstavCombined = TRUE
			Call SRCHOpslagAdr1KnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_KNR_VNVN_HNR_B, 306, 6
			mbHusnrBogstavCombined = FALSE
			Call SRCHOpslagAdr1KnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_KNR_VNR_VNVN_HNR, 307, 7
			mbHusnrBogstavCombined = TRUE
			Call SRCHOpslagAdr1KnrVnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_KNR_VNR_VNVN_HNR_B, 308, 8
			mbHusnrBogstavCombined = FALSE
			Call SRCHOpslagAdr1KnrVnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_PNR_VNVN_HNR, 309, 9
			mbHusnrBogstavCombined = TRUE
			Call SRCHOpslagAdr1PnrVnvnHnr(sbtnCur)

		Case SSTYPE_3_PNR_VNVN_HNR_B, 310, 10
			mbHusnrBogstavCombined = FALSE
			Call SRCHOpslagAdr1PnrVnvnHnr(sbtnCur)

	End Case

	'Nulstiller array's med værdier
	ReDim marrValues1(0)
	ReDim marrValues2(0)
	ReDim marrValues3(0)
	ReDim marrValues4(0)
	ReDim marrValues5(0)

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

