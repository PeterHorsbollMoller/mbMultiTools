'**********************************************************************************************''
'Handler - Der blev trykket på 'søg' knappen
'**********************************************************************************************''
Sub Adr1VnvnHnrButtonCTRL(ByVal nCtrl As Integer)

Dim	nCtrlItem, nLstCtrl As Integer,
	szValue, szCond As String

OnError GoTo ErrorOccured

	nCtrlItem	= (nCtrl - 3) / 100

	Do Case nCtrlItem
		Case 4	'VEJNAVN
			nLstCtrl	= nCtrl - 3
			szValue	= ReadControlValue(nLstCtrl + 2)
			szCond	= SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "Like", szValue)

			If SRCHLoadValuesIntoListControl(nLstCtrl, -1, marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, szCond, marrValues4, FALSE) Then
				Call Adr1VnvnHnrListCTRL(nLstCtrl, FALSE, FALSE)
			End If

		Case 5	'HUSNR
			nLstCtrl	= nCtrl - 3
			szValue	= ReadControlValue(nLstCtrl + 2)

			If mbHusnrBogstavCombined Then
				szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "Like", szValue)
			Else
				szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol & "+" & marrssdInfo(6).szCol, "Like", szValue)				
			End If		

			szCond = SRCHCombineConditions$(marrssdInfo(4).szCond, szCond)

			If mbHusnrBogstavCombined Then
				If SRCHLoadValuesIntoListControl(nLstCtrl, -1, marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, szCond, marrValues5, TRUE) Then
					Call Adr1VnvnHnrListCTRL(nLstCtrl, FALSE, FALSE)
				End If
			Else
				If SRCHLoadValues2IntoListControl(nLstCtrl, -1, marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, marrssdInfo(6).szCol, szCond, marrValues5, TRUE) Then
					Call Adr1VnvnHnrListCTRL(nLstCtrl, FALSE, FALSE)
				End If
			End If
	End Case
	
	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

'**********************************************************************************************''
'Der blev trykket på knappen til zoom
'**********************************************************************************************''
Sub HandlerAdr1OpslagZoom

Dim	nMID As Integer,
	fZoom As Float

OnError GoTo ErrorOccured

	nMID = FrontWindow()
	If nMID > 0 Then
		If WindowInfo(nMID, WIN_INFO_TYPE) = WIN_MAPPER Then
			fZoom	= Val(KommaToPoint(ReadControlValue(SRCH_CTRL_ADR_ZOOM)))
			If fZoom < 1 Then
				fZoom = VALUE_DEFAULT_ZOOM
			End If
			
			Set Map
				Window nMID
				Zoom fZoom Units "m"	
		End If
	End If

	'**Setting value for AutoClose
	Call SRCHSetAutoCloseSearchDialog(ReadControlValue(SRCH_CTRL_ADR_AUTOCLOSE))

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

