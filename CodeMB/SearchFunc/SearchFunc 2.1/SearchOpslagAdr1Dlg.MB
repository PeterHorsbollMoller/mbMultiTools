Sub Adr1VnrVnvnHnrListCTRL(ByVal nCtrl As Integer, ByVal bSelectAll As Logical, ByVal bReCalled As Logical)

Dim	nCtrlItem, nItem, nMatchItem As Integer,
	szValue, szMatchVal, szCmdStr As String

OnError GoTo ErrorOccured

	nCtrlItem	= nCtrl / 100
	nItem		= ReadControlValue(nCtrl)

	Do Case nCtrlItem
		'---------------------------------------------
		Case 3	'VEJKODE
			If nItem = 0 Then
				ReDim marrValues5
			Else
				szValue = marrValues3(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
		
				'**Finding the matching VEJKODE
				If NOT bReCalled Then
					If NOT SRCHShowMatchValueInListControl(SRCH_CTRL_ADR_VEJNAVN_LIST, marrssdInfo(nCtrlItem).szTab,
