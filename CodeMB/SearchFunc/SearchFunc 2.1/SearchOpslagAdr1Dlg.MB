'**********************************************************************************************''
'Handler - Der blev udpeget en post i en liste
'**********************************************************************************************''
Sub Adr1VnvnHnrListCTRL(ByVal nCtrl As Integer, ByVal bSelectAll As Logical, ByVal bReCalled As Logical)

Dim	nCtrlItem, nItem As Integer,
	szValue, szCmdStr As String

OnError GoTo ErrorOccured

	nCtrlItem	= nCtrl / 100
	nItem		= ReadControlValue(nCtrl)

	Do Case nCtrlItem
		Case 4	'VEJNAVN
			If nItem = 0 Then
				ReDim marrValues5(0)
			Else
				szValue = marrValues4(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
			End If

			Call Adr1VnvnHnrButtonCTRL(SRCH_CTRL_ADR_HUSNR_BUTTON)

			If bSelectAll Then
				Call HandlerAdr1OpslagZoom
				Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)
			End If

		Case 5	'HUSNR
			szValue = marrValues5(nItem)
			If mbHusnrBogstavCombined Then
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
			Else
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol & "+" & marrssdInfo(6).szCol, "=", szValue)				
			End If		
			marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(4).szCond, marrssdInfo(nCtrlItem).szCond)
		
			Call HandlerAdr1OpslagZoom
			Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)
			
			If ReadControlValue(SRCH_CTRL_ADR_AUTOCLOSE) Then
				Dialog Remove
			End If
	End Case

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

