'**********************************************************************************************''
'Handler - Der blev udpeget en post i en liste
'**********************************************************************************************''
Sub Matr1EnrElavListCTRL(ByVal nCtrl As Integer, ByVal bSelectAll As Logical, ByVal bReCalled As Logical)

Dim	nCtrlItem, nItem, nMatchItem As Integer,
	szValue, szMatchVal, szCmdStr As String

OnError GoTo ErrorOccured

	nCtrlItem	= nCtrl / 100
	nItem		= ReadControlValue(nCtrl)

	Do Case nCtrlItem
		'---------------------------------------------
		Case 2	'LANDSEJERLAVKODE
			If nItem = 0 Then
				ReDim marrValues5
			Else
				szValue = marrValues2(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
		
				'**Finding the matching LANDSEJERLAV
				If NOT bReCalled Then
					If NOT SRCHShowMatchValueInListControl(SRCH_CTRL_MATR_LANDSELAV_LIST, marrssdInfo(nCtrlItem).szTab,
							marrssdInfo(nCtrlItem).szCol, marrssdInfo(4).szCol, marrssdInfo(nCtrlItem).szCond, marrValues4) Then
					
						Note szValue & ": Tilsvarende " & marrssdInfo(4).szDesc & " ikke fundet!"
					End If				
				End If
			End If
				
			Call Matr1EnrElavButtonCTRL(SRCH_CTRL_MATR_MATRNR_BUTTON)
		
			If bSelectAll Then
				Call HandlerMatr1OpslagZoom
				Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)
			End If
			
		'---------------------------------------------
		Case 4	'LANDSEJERLAVNAVN
			If nItem = 0 Then
				ReDim marrValues5
			Else
				szValue = marrValues4(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
	
				'**Finding the matching LANDSEJERLAVNR
				If NOT SRCHShowMatchValueInListControl(SRCH_CTRL_MATR_LANDSELAVNR_LIST, marrssdInfo(nCtrlItem).szTab,
						marrssdInfo(nCtrlItem).szCol, marrssdInfo(2).szCol, marrssdInfo(nCtrlItem).szCond, marrValues2) Then
				
					Note szValue & ": Tilsvarende " & marrssdInfo(2).szDesc & " ikke fundet!"
				End If				
			End If

			Call Matr1EnrElavListCTRL(SRCH_CTRL_MATR_LANDSELAVNR_LIST, bSelectAll, TRUE)

		'---------------------------------------------
		Case 5	'MATR.NR.
			If nItem = 0 Then
				Exit Sub
			End If

			szValue = marrValues5(nItem)
			marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)

			If marrssdInfo(4).szCond = "" Then
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(2).szCond, marrssdInfo(nCtrlItem).szCond)
			Else
				marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(4).szCond, marrssdInfo(nCtrlItem).szCond)
			End If

			Call HandlerMatr1OpslagZoom
			Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)

			If ReadControlValue(SRCH_CTRL_MATR_AUTOCLOSE) Then
				Dialog Remove
			End If
	End Case

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

