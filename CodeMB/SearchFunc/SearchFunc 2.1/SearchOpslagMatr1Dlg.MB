'**********************************************************************************************''
'Handler - Der blev udpeget en post i en liste
'**********************************************************************************************''
Sub Matr1ElavListCTRL(ByVal nCtrl As Integer, ByVal bSelectAll As Logical, ByVal bReCalled As Logical)

Dim	nCtrlItem, nItem As Integer,
	szValue, szCmdStr As String

OnError GoTo ErrorOccured

	nCtrlItem	= nCtrl / 100
	nItem		= ReadControlValue(nCtrl)

	Do Case nCtrlItem
		Case 4	'LANDSEJERLAVNAVN
			If nItem = 0 Then
				ReDim marrValues5(0)
			Else
				szValue = marrValues4(nItem)
				marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
	
			End If

			Call Matr1ElavButtonCTRL(SRCH_CTRL_MATR_MATRNR_BUTTON)

			If bSelectAll Then
				Call HandlerMatr1OpslagZoom
				Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)
			End If

		Case 5	'MATR.NR.
			szValue = marrValues5(nItem)
			marrssdInfo(nCtrlItem).szCond = SRCHGetConditionFromValue$(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCol, "=", szValue)
			marrssdInfo(nCtrlItem).szCond = SRCHCombineConditions$(marrssdInfo(4).szCond, marrssdInfo(nCtrlItem).szCond)
		
			Call HandlerMatr1OpslagZoom
			Call SRCHSelectAll(marrssdInfo(nCtrlItem).szTab, marrssdInfo(nCtrlItem).szCond)

			If ReadControlValue(SRCH_CTRL_MATR_AUTOCLOSE) Then
				Dialog Remove
			End If
	End Case

	Exit Sub
'-------------------------
ErrorOccured:
	Note ERR_ERRORMSG & lf & Error$()

End Sub

